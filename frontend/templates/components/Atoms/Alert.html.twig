{% set classes = 'max-w-[760px] mx-auto alert-msg ' ~ alertClasses %}
{% set wrapperClasses = ([
    "py-6 px-8 border-2",
    variant == 'success' ? "border-success",
    variant == 'error' ? "border-error",
    variant == 'warning' ? "border-warning",
    variant == 'info' ? "border-brand-primary",
] | sort | join(' ') | trim ) %}

{% set iconClasses = ([
    variant == 'info' ? "icon-path:stroke-brand-primary text-brand-primary",
    variant == 'success' ? "icon-path:stroke-success text-success",
    variant == 'error' ? "icon-path:stroke-error text-error",
    variant == 'warning' ? "icon-path:stroke-warning text-warning"
] | sort | join(' ') | trim ) %}

{% set textClasses = ([
    variant == 'info' ? "text-brand-primary",
    variant == 'success' ? "text-success",
    variant == 'error' ? "text-error",
    variant == 'warning' ? "text-warning"
] | sort | join(' ') | trim ) %}


{# TEMPLATE #}
<div {{ attributes.defaults({class: classes}) }}
    x-data="{ show: true }"
    x-show="show"
    x-transition:enter="transform ease-out duration-300 transition"
    x-transition:enter-start="translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
    x-transition:enter-end="translate-y-0 opacity-100 sm:translate-x-0"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
>
    <div class="{{ wrapperClasses }}">
        <div class="flex items-center gap-4">
            <twig:Atoms:Icon icon="{{variant}}" size="large" iconColor="{{ iconClasses }}" />
            <twig:Atoms:RichText text="{{ text }}" textClasses="{{ textClasses }}" />
        </div>
    </div>
</div>
