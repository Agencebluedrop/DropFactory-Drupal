{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% set formContentArray = [] %}
    {% set formContent %}
        <twig:Molecules:FormContainer formTitle="Please sign in">
            <form method="post" class="space-y-6">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                {# <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required> #}

                <twig:Atoms:FormElement inputType="email" inputId="username" label="Email" value="{{ last_username }}" name="_username" autocompleteVal="email" :required="true" additionalAttributes="autofocus" />
                <twig:Atoms:FormElement inputType="password" inputId="password" label="Password" name="_password" autocompleteVal="current-password" :required="true" />
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                {# <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button> #}
                <twig:Atoms:Button type="submit" label="Sign in" buttonClasses="w-full" />
            </form>
        </twig:Molecules:FormContainer>
    {% endset %}
    {% set formContentArray = formContentArray|merge([formContent]) %}
      <twig:Utils:Section :gridItems="formContentArray" columns="1" columnsWidth="8" />
{% endblock %}
