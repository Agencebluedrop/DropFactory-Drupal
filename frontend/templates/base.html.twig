<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            {% block title %}DropFactory{% endblock %}
        </title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://cdn.jsdelivr.net/npm/choices.js@10.0.0/public/assets/styles/choices.min.css" rel="stylesheet"/>
        <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
        <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;700;800&display=swap" rel="stylesheet">
        {% include 'favicon.html.twig' %}

        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body class="{% block body_classes %}{% endblock %}">
        {% block header %}
            <twig:Regions:Header/>
        {% endblock %}

        <main>
            {% block hero %}{% endblock %}

            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                <div class="{% if loop.first %} mt-20 {% elseif loop.last %} mb-10 mt-2 {% else %} mt-2 {% endif %}">
                    {% for message in messages %}
                            <twig:Atoms:Alert :text="message" :variant="label"/>
                    {% endfor %}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        {% block footer %}
            <twig:Regions:Footer/>
        {% endblock %}

        {% block js_bottom %}{% endblock %}
    </body>
</html>
