{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block hero %}
    <twig:Molecules:Hero label="Administration" />
{% endblock %}
{% block body %}
 {% set formContentArray = [] %}
    {% set formContent %}
            <twig:Molecules:FormContainer formTitle="Welcome to the administration area">
                <div class="flex item-center gap-4 [&>a]:w-full lg:[&>a]:w-[calc(50%-8px)] flex-wrap">
                    <twig:Atoms:Button label="Clear Symfony Caches" url="{{path('app_clear_cache')}}" icon="empty-cache" />
                    <twig:Atoms:Button label="Backups" url="{{path('app_backups')}}" />
                    <twig:Atoms:Button label="Add a user" url="{{path('app_register')}}" />
                    <twig:Atoms:Button label="Logout" url="{{path('app_logout')}}" variant="outline" icon="logout" btnIconColor="icon-path:fill-brand-primary" />
                </div>
            </twig:Molecules:FormContainer>
    {% endset %}
    {% set formContentArray = formContentArray|merge([formContent]) %}
    <twig:Utils:Section :gridItems="formContentArray" columns="1" columnsWidth="8" />
{% endblock %}
